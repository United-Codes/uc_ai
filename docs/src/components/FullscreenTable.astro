---
// FullscreenTable.astro - A wrapper component that adds a fullscreen dialog to tables
---

<div class="fullscreen-table-wrapper">
  <button class="fullscreen-toggle" title="Expand table" aria-label="Expand table in fullscreen">
    <svg class="icon-expand" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="15 3 21 3 21 9"></polyline>
      <polyline points="9 21 3 21 3 15"></polyline>
      <line x1="21" y1="3" x2="14" y2="10"></line>
      <line x1="3" y1="21" x2="10" y2="14"></line>
    </svg>
    <span>Expand table</span>
  </button>
  <div class="table-container">
    <slot />
  </div>
</div>

<dialog class="fullscreen-table-dialog">
  <div class="dialog-header">
    <span class="dialog-title">Feature Matrix</span>
    <button class="dialog-close" title="Close" aria-label="Close dialog">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
  <div class="dialog-content">
    <slot />
  </div>
</dialog>

<style>
  .fullscreen-table-wrapper {
    position: relative;
    margin: 1.5rem 0;
    padding-top: 2.5rem;
  }

  .fullscreen-toggle {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    position: absolute;
    top: 0;
    right: 0;
    padding: 0.4rem 0.75rem;
    background: var(--sl-color-bg-nav);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.375rem;
    color: var(--sl-color-text);
    font-size: 0.8rem;
    cursor: pointer;
    z-index: 10;
    transition: background-color 0.2s, border-color 0.2s;
  }

  .fullscreen-toggle:hover {
    background: var(--sl-color-gray-6);
    border-color: var(--sl-color-gray-4);
  }

  .table-container {
    overflow-x: auto;
    border-radius: 0.5rem;
  }

  /* Dialog styles */
  .fullscreen-table-dialog {
    width: 95vw;
    max-width: none;
    height: 90vh;
    max-height: none;
    margin: auto;
    padding: 0;
    border: 1px solid var(--sl-color-gray-5);
    background: var(--sl-color-bg);
    color: var(--sl-color-text);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
  }

  .fullscreen-table-dialog::backdrop {
    background: rgba(0, 0, 0, 0.7);
    backdrop-filter: blur(4px);
  }

  .dialog-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 1.5rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
    background: var(--sl-color-bg-nav);
    border-radius: 0.75rem 0.75rem 0 0;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .dialog-title {
    font-size: 1.1rem;
    font-weight: 600;
  }

  .dialog-close {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    background: transparent;
    border: none;
    border-radius: 0.375rem;
    color: var(--sl-color-text);
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .dialog-close:hover {
    background: var(--sl-color-gray-5);
  }

  .dialog-content {
    padding: 1.5rem;
    overflow: auto;
    height: calc(90vh - 4rem);
  }

  /* Table styles inside dialog */
  .dialog-content :global(table) {
    width: 100%;
    table-layout: fixed;
    font-size: 0.95rem;
  }

  .dialog-content :global(th),
  .dialog-content :global(td) {
    padding: 0.75rem 1rem;
    white-space: nowrap;
  }

  .dialog-content :global(th:first-child),
  .dialog-content :global(td:first-child) {
    position: sticky;
    left: 0;
    background: var(--sl-color-bg);
    z-index: 1;
    box-shadow: 2px 0 4px rgba(0, 0, 0, 0.15);
  }

  .dialog-content :global(th:first-child) {
    background: var(--sl-color-bg-nav);
  }
</style>

<script>
  function initFullscreenTable() {
    const wrappers = document.querySelectorAll('.fullscreen-table-wrapper');
    
    wrappers.forEach(wrapper => {
      const button = wrapper.querySelector('.fullscreen-toggle');
      const dialog = wrapper.nextElementSibling as HTMLDialogElement;
      
      if (!dialog || dialog.tagName !== 'DIALOG') return;
      
      const closeBtn = dialog.querySelector('.dialog-close');
      
      // Avoid adding multiple listeners
      if (button && !button.hasAttribute('data-initialized')) {
        button.setAttribute('data-initialized', 'true');
        
        button.addEventListener('click', () => {
          dialog.showModal();
        });
        
        closeBtn?.addEventListener('click', () => {
          dialog.close();
        });
        
        // Close on backdrop click
        dialog.addEventListener('click', (e) => {
          if (e.target === dialog) {
            dialog.close();
          }
        });
      }
    });
  }

  // Run on initial load
  initFullscreenTable();
  
  // Run on Astro page transitions
  document.addEventListener('astro:page-load', initFullscreenTable);
</script>
